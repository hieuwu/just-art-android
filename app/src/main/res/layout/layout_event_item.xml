<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="event"
            type="com.hieuwu.justart.domain.models.EventDo" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:foreground="?attr/selectableItemBackground"
        android:padding="8dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="5.0dp">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="230dp"
            android:orientation="vertical"
            android:padding="12dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="230dp"
                android:layout_height="130dp"
                app:imageUrl="@{event.imageUrl}" />

            <com.hieuwu.justart.presentation.views.custom.CollapseParagraphView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentValue="@{event.shortDescription}"
                app:showChevron="false"
                app:titleValue="@{event.title}" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>