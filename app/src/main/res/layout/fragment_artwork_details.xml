<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.hieuwu.justart.presentation.artworkdetails.ArtWorkDetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.artworkdetails.ArtDetailsFragment">

        <ImageView
            android:id="@+id/artWorksImage"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="center"
            app:imageUrl="@{viewModel.artWorksDetails.imageUrl}"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
